# ========================================
# ENVIRONNEMENT
# ========================================
NODE_ENV=development
PORT=3000

# ========================================
# BASE DE DONNÉES SQLite
# ========================================
DATABASE_URL="file:./prisma/dev.db"
# Pour production, vous pouvez utiliser :
# DATABASE_URL="file:./prisma/prod.db"

# ========================================
# AUTHENTIFICATION JWT
# ========================================
JWT_SECRET="votre_secret_jwt_très_long_et_complexe_changez_le_pour_la_production_au_moins_32_caractères"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_EXPIRES_IN="30d"

# ========================================
# CORS & CLIENT
# ========================================
CLIENT_URL="http://localhost:5173"
# Pour plusieurs origines :
# CLIENT_URL="http://localhost:5173,http://localhost:3000,http://localhost:8080"

# ========================================
# APPLICATION
# ========================================
APP_NAME="Podium Challenge"
APP_VERSION="1.0.0"

# ========================================
# SOCKET.IO
# ========================================
SOCKET_ENABLED=true
SOCKET_PING_TIMEOUT=60000
SOCKET_PING_INTERVAL=25000

# ========================================
# SWAGGER
# ========================================
SWAGGER_ENABLED=true